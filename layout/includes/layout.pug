
- var pageTitle = page.title || config.subtitle || ''
- if (is_archive()) pageTitle = 'Archives'
- if (is_tag()) pageTitle = 'Tag: ' + page.tag
- if (is_category()) pageTitle = 'Category: ' + page.category
- if (is_month()) pageTitle += ': ' + page.month + '/' + page.year
- if (is_year()) pageTitle += ': ' + page.year
- pageTitle += ' [ ' + config.title + ' ]'

doctype html
html(lang=config.language)
  head
    meta(charset='UTF-8')
    title= pageTitle
    if theme.stylesheets !== undefined && theme.stylesheets.length > 0
      //- stylesheets list from _config.yml
      each url in theme.stylesheets
        link(rel='stylesheet', href=url)
    script(src="https://cdn.bootcss.com/jquery/3.4.0/jquery.min.js")
    script(src="https://cdn.bootcss.com/lazysizes/5.1.0/lazysizes.min.js")
    script.
      $("img").attr({"class":"lazyload"});
    

  body
    #menu-outer
      nav#menu-inner
        each url, label in theme.menu
          a#menuLabel(href=url)= label
    #content-outer
      #content-inner
        if body
          div!= body
        else
          block content
    #footer
      #bottom-inner
        span Powerd By 
        span= ' ' + config.author + ' '
        span using    
        a(href='https://github.com/meizjm3i')
          span Meizj
        span .
        br
    if theme.scripts !== undefined && theme.scripts.length > 0
      //- scripts list from config.yml
      each url in theme.scripts
        script(src=url)
    script.
      //- $(window).on('load', function(){ 
      $('pre').addClass('prettyprint linenums');
      prettyPrint();
      //- });
      $(".gutter").remove();